<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/commbg"
    tools:context="com.taoQlegoupeisongduanandroid.delivery.module.init.GetCashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户可用余额："
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/getcash_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="￥0.00"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:longClickable="false"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额："
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/getcash_cash"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            style="@style/comm_et"

            />
        <!--android:inputType="numberDecimal"-->
        <TextView
            android:id="@+id/getcash_declare1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 最低提现金额为1元"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/getcash_declare2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 提现消费率为2%，最低收取0元，最高收取100元"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            />
        <Button
            style="@style/comm_bt"
            android:id="@+id/getcash_commit"
            android:text="@string/getcash"
            />

    </LinearLayout>


</LinearLayout>
