<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:id="@+id/item_goodslist_sumprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="￥59.99"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_toLeftOf="@id/item_goodslist_sumprice"
            android:id="@+id/item_goodslist_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="x1"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/item_goodslist_name"
            android:layout_toLeftOf="@id/item_goodslist_count"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="天然矿泉水"
            android:textColor="@color/black"
            />
    </RelativeLayout>

</LinearLayout>
