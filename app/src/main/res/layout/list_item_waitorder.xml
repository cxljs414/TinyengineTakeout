<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/itemwaitorder_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/order_typetv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="随意购"
                    android:textSize="12sp"
                    android:textColor="@color/syg_color"
                    android:background="@drawable/background_round_kss"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/order_classtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#E88220"
                    android:background="@drawable/background_round_class"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <LinearLayout
                    android:id="@+id/itemwaitorder_feelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/gray"

                        />
                    <TextView
                        android:id="@+id/itemwaitorder_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥8.9"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_toLeftOf="@id/itemwaitorder_feelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/orderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="22dp"
                        android:textColor="#E88220"
                        android:layout_marginRight="10dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/dq"
                        />
                    <TextView
                        android:id="@+id/itemwaitorder_getkm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-2.1km-"
                        android:layout_margin="3dp"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ds"
                        />
                    <TextView
                        android:id="@+id/itemwaitorder_sendkm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-2.1km-"
                        android:layout_margin="3dp"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/dr"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/goodlayout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物："
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    />
                <TextView
                    android:id="@+id/itemwaitorder_goodname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/accetp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取："
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    />
                <TextView
                    android:id="@+id/itemwaitorder_getaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/send_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送："
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/itemwaitorder_sendaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/background_round2_green"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单时间"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/itemwaitorder_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:43"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/background_round2_green"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_alignParentRight="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送时间"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/itemwaitorder_deliverytime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:43"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/notelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="top"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/notelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="备注："
                    />
                <TextView
                    android:id="@+id/note"
                    android:layout_toRightOf="@id/notelabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text=""
                    />
            </RelativeLayout>
            <Button
                android:id="@+id/itemwaitorder_grab"
                android:layout_marginBottom="10dp"
                android:text="抢单"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                style="@style/comm_bt"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
