<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/itemwaittakeorder_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                >
            <TextView
                android:id="@+id/order_typetv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="随意购"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:layout_gravity="center_vertical"
                android:background="@drawable/background_round_syg"
                android:gravity="center"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/order_classtv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="#E88220"
                android:background="@drawable/background_round_class"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:visibility="gone"
                />
                </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <LinearLayout
                    android:id="@+id/itemwaittakeorder_feelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/gray"

                        />
                    <TextView
                        android:id="@+id/itemwaittakeorder_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥8.9"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_toLeftOf="@id/itemwaittakeorder_feelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/orderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="22dp"
                        android:textColor="#E88220"
                        android:layout_marginRight="10dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/dq"
                        />
                    <TextView
                        android:id="@+id/itemwaittakeorder_getkm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="3dp"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ds"
                        />
                    <TextView
                        android:id="@+id/itemwaittakeorder_sendkm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="3dp"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/dr"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/goodlayout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物："
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    />
                <TextView
                    android:id="@+id/itemwaitorder_goodname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/accetp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取："
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    />
                <TextView
                    android:id="@+id/itemwaittakeorder_getaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/send_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送："
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/itemwaittakeorder_sendaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/background_round2_green"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单时间"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/itemwaittakeorder_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/background_round2_green"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_alignParentRight="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送时间"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/itemwaittakeorder_deliverytime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/notelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="top"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/notelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="备注："
                    />
                <TextView
                    android:id="@+id/note"
                    android:layout_toRightOf="@id/notelabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text=""
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:weightSum="2"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:id="@+id/itemwaittakeorder_shopmobilecontain"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_round_green"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    >
                    <TextView
                        android:id="@+id/itemwaittakeorder_shopmobiletile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="店"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/itemwaittakeorder_shopmobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemwaittakeorder_custommobilecontain"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_round_blue"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/itemwaittakeorder_custommobiletile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="客"
                        android:textSize="18sp"
                        android:textColor="@color/blue"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue"
                        />

                    <TextView
                        android:id="@+id/itemwaittakeorder_custommobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        android:textColor="@color/blue"
                        />
                </LinearLayout>
                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/itemwaittakeorder_get"
                    android:layout_weight="1"
                    android:text="确认取货"
                    android:gravity="center"
                    style="@style/comm_bt"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
